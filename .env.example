# ChatMock Configuration
# Copy this file to .env and customize as needed

# Server Settings
CHATMOCK_HOST=127.0.0.1
CHATMOCK_PORT=8000

# Logging
CHATMOCK_VERBOSE=false
CHATMOCK_VERBOSE_OBFUSCATION=false

# Reasoning Configuration
CHATMOCK_REASONING_EFFORT=medium
CHATMOCK_REASONING_SUMMARY=auto
CHATMOCK_REASONING_COMPAT=think-tags

# Model Settings
CHATMOCK_DEBUG_MODEL=
CHATMOCK_EXPOSE_REASONING_MODELS=false

# Features
CHATMOCK_DEFAULT_WEB_SEARCH=false

# Ollama Compatibility
CHATMOCK_OLLAMA_VERSION=0.12.10

