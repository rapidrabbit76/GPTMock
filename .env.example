# gptmock Configuration
# Copy this file to .env and customize as needed

# Server Settings
GPTMOCK_HOST=127.0.0.1
GPTMOCK_PORT=8000

# Logging
GPTMOCK_VERBOSE=false
GPTMOCK_VERBOSE_OBFUSCATION=false

# Reasoning Configuration
GPTMOCK_REASONING_EFFORT=medium
GPTMOCK_REASONING_SUMMARY=auto
GPTMOCK_REASONING_COMPAT=think-tags

# Model Settings
GPTMOCK_DEBUG_MODEL=
GPTMOCK_EXPOSE_REASONING_MODELS=false

# Features
GPTMOCK_DEFAULT_WEB_SEARCH=false

# Ollama Compatibility
GPTMOCK_OLLAMA_VERSION=0.12.10

